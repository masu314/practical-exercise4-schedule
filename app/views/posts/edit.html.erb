<div class ="form_container">
    <h3>予定を編集してください<h3>
    <div class = "form">
        <%= form_with model: @post do |f| %>
        <table>
            <tr>
            <th><%= f.label :title ,"タイトル*" %></th>
            <td><%= f.text_field :title, placeholder:"タイトル", size: 50 %></td>
            </tr>

            <tr>
            <th><%= f.label :start_day ,"開始日*" %></th>
            <td><%= f.date_field :start_day %></td>
            </tr>

            <tr>
            <th><%= f.label :end_day ,"終了日*" %></th>
            <td><%= f.date_field :end_day %></td>
            </tr>

            <tr>
            <th><%= f.label :all_day ,"終日の場合はチェックを入れます" %></th>
            <td><%= f.check_box :all_day %></td>
            </tr>

            <tr>
            <th><%= f.label :memo ,"スケジュールメモ" %></th>
            <td><%= f.text_area :memo, placeholder:"メモを入力する", size: "49x10"%></td>
            </tr>
        </table>

        <div class = "footer_button">
            <button class="white" type="button"><%= link_to "キャンセル", :posts %></button>
            <%= f.submit "保存" %>
        </div>
        <% end %>
    </div>
    <% if flash[:notice] %>
        <p class="flash_message red_notice"><%= flash[:notice] %></p>
    <% end %>
</div>
